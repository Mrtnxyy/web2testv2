<div class="crud-container">
    <h1 class="page-title">
        <%= user.role === 'admin' ? 'Beérkezett Üzenetek' : 'Saját Üzeneteim' %>
    </h1>

    <% if (typeof successMsg !== 'undefined' && successMsg) { %>
        <div id="toast-box" class="toast-notification">
            <span style="font-weight: 600; font-family: 'Poppins', sans-serif;">
                ✅ <%= successMsg %>
            </span>
            <button class="toast-close" onclick="closeToast()">×</button>
        </div>
        <script>
            const toast = document.getElementById('toast-box');
            if (toast) {
                if (window.history.replaceState) {
                    const url = new URL(window.location);
                    url.searchParams.delete('msg');
                    window.history.replaceState(null, '', url);
                }
                setTimeout(() => { closeToast(); }, 3000);
            }
            function closeToast() {
                const t = document.getElementById('toast-box');
                if (t) { t.classList.add('fade-out'); setTimeout(() => { t.remove(); }, 500); }
            }
        </script>
    <% } %>

    <% if (messages && messages.length > 0) { %>
        <div class="grid-container" style="justify-content: center; flex-direction: column; align-items: center;">
            
            <% messages.forEach(msg => { %>
                
                <div class="card <%= msg.reply ? 'msg-answered' : 'msg-pending' %>" 
                     style="width: 100%; max-width: 800px; text-align: left; margin-bottom: 20px; position: relative;">
                    
                    <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 10px; margin-bottom: 15px;">
                        <div>
                            <h3 style="margin: 0; font-size: 1.2rem; color: #fff;"><%= msg.name %></h3>
                            <small style="color: #888;"><%= new Date(msg.created_at).toLocaleString() %></small>
                        </div>

                        <form action="/messages/delete/<%= msg._id %>" method="POST" style="margin:0;">
                            <button type="submit" class="action-button" 
                                    onclick="return confirm('Biztosan törölni szeretnéd?')"
                                    style="background-color: rgba(100, 0, 0, 0.6); color: #ff9999; border: 1px solid #ff4d4d; min-width: auto; padding: 5px 10px; font-size: 0.8rem;">
                                Törlés
                            </button>
                        </form>
                    </div>
                    
                    <p style="color: #d4af37; font-size: 0.9rem; margin-bottom: 5px;">Email: <%= msg.email %></p>
                    
                    <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 4px; margin-bottom: 15px; color: #ddd;">
                        "<%= msg.message %>"
                    </div>

                    <% if (user.role === 'admin') { %>
                        
                        <form action="/messages/reply/<%= msg._id %>" method="POST" style="margin-top: 15px; padding-top: 15px; border-top: 1px dashed #444;">
                            <label style="color: #2ecc71; font-weight: bold; display: block; margin-bottom: 5px;">
                                <%= msg.reply ? 'Válasz módosítása:' : 'Válasz írása:' %>
                            </label>
                            <textarea name="replyText" rows="3" style="width:100%; margin-bottom: 10px;" required><%= msg.reply || '' %></textarea>
                            <button type="submit" class="add-new-btn" style="width: auto; display: inline-block; padding: 8px 20px; font-size: 0.9rem;">
                                Küldés
                            </button>
                        </form>

                    <% } else { %>
                        
                        <% if (msg.reply) { %>
                            <div style="margin-top: 15px; padding: 15px; background: rgba(46, 204, 113, 0.1); border-left: 3px solid #2ecc71; border-radius: 0 4px 4px 0;">
                                <strong style="color: #2ecc71; display: block; margin-bottom: 5px;">Admin válasza:</strong>
                                <p style="color: #fff; margin: 0;"><%= msg.reply %></p>
                                <small style="color: #888; display: block; margin-top: 5px;">
                                    <%= msg.replied_at ? new Date(msg.replied_at).toLocaleString() : '' %>
                                </small>
                            </div>
                        <% } else { %>
                            <p style="color: #666; font-style: italic; margin-top: 10px;">Még nem érkezett válasz.</p>
                        <% } %>

                    <% } %>

                </div>
            <% }) %>

        </div>
    <% } else { %>
        <div style="text-align: center; color: #888; padding: 50px;">
            <h3>Nincs megjeleníthető üzenet.</h3>
        </div>
    <% } %>
</div>