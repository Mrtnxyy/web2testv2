<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Bejelentkezés</h2>

        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <form method="post" action="/auth/login">
            <div class="form-group">
                <label for="email">E-mail cím</label>
                <input type="email" id="email" name="email" placeholder="pelda@opera.hu" required>
            </div>

            <div class="form-group">
                <label for="password">Jelszó</label>
                <input type="password" id="password" name="password" placeholder="Jelszó" required>
            </div>

            <button type="submit" class="btn-submit">Belépés</button>
        </form>

        <div class="auth-footer">
            <p>Még nincs fiókja? <a href="/auth/register">Regisztráljon itt.</a></p>
        </div>
    </div>
</div>