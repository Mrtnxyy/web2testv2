<div class="auth-wrapper">
    <div class="auth-card">
        <h2>Regisztráció</h2>

        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <form method="post" action="/auth/register">
            <div class="form-group">
                <label for="name">Teljes Név</label>
                <input type="text" id="name" name="name" placeholder="Pl. Pavarotti Luciano" required>
            </div>

            <div class="form-group">
                <label for="email">E-mail cím</label>
                <input type="email" id="email" name="email" placeholder="pelda@opera.hu" required>
            </div>

            <div class="form-group">
                <label for="password">Jelszó</label>
                <input type="password" id="password" name="password" placeholder="Minimum 6 karakter" required>
            </div>

            <button type="submit" class="btn-submit">Fiók Létrehozása</button>
        </form>

        <div class="auth-footer">
            <p>Már van fiókja? <a href="/auth/login">Jelentkezzen be.</a></p>
        </div>
    </div>
</div>